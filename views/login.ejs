	</nav>
	<% include ./partials/messages %>
		<div class="cont">
			<div class="form sign-in login-form" id="login-form">
				<h2>Login</h2>
				<!-- <% include ./partials/messages %> -->
				<form action="/login" method="POST">
					<label>
						<span>Email</span>
						<input type="email" id="email" name="email" required />
					</label>
					<label>
						<span>Password</span>
						<input type="password" id="password" name="password" required />
					</label>
					<!-- <p class="forgot-pass">Forgot password?</p> -->
					<!-- <div class="forgot-pass">
						<a href="#" class="forgot-pass">Forgot password?</a>
					</div> -->
					<button type="submit" class="submit">Sign In</button>
				</form>
				<!-- <button type="button" class="fb-btn">Connect with <span>facebook</span></button> -->
			</div>
			<div class="sub-cont">
				<div class="img">
					<div class="img__text m--up">
						<h2>New here?</h2>
						<p>Sign up and discover great amount of new opportunities!</p>
					</div>
					<div class="img__text m--in">
						<h2>Already Joined?</h2>
						<p>If you already has an account, just sign in.</p>
					</div>
					<div class="img__btn">
						<span class="m--up">Register</span>
						<span class="m--in">Login</span>
					</div>
				</div>
				<div class="form sign-up">
					<h2 class="head">Register</h2>
					<form action="/register" method="POST">
						<label>
							<span>Name</span>
							<input type="text" id="name" name="name" required
								value="<%= typeof name != 'undefined' ? name : '' %>" />
						</label>
						<label>
							<span>Email</span>
							<input type="email" id="email" name="email" required
								value="<%= typeof email != 'undefined' ? email : '' %>" />
						</label>
						<label>
							<span>Password</span>
							<input type="password id=" password" name="password" required
								value="<%= typeof password != 'undefined' ? password : '' %>" />
						</label>
						<label>
							<span>Register as :</span>
							<select id="checkbox" name="checkbox" class="form-control">
								<option value="student">Student</option>
								<option value="teacher">Teacher</option>
							</select>
						</label>


						<!-- <label>
							<span>Register as a: </span>
							<input list="checkbox" id="checkbox" name="checkbox" />

							<datalist id="checkbox">
								<option value="Student" selected />
								<option value="Teacher">
							</datalist>
						</label> -->
						<!-- <label>
							<span>Confirm Password</span>
							<input type=" password" id="password2" name="password2" required
								value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
						</label> -->
						<!-- <p class="forgot-pass">Forgot password?</p> -->
						<!-- <div class="forgot-pass">
							<a href="#" class="forgot-pass">Forgot password?</a>
						</div> -->

						<button type="submit" class="submit" value="Submit Form">Sign Up</button>
					</form>
					<!-- <button type="button" class="fb-btn">Join with <span>facebook</span></button> -->
				</div>
			</div>
		</div>

		<script src="js/app.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
