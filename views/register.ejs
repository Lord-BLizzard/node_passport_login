  <div class="login-container" id="login-container" style="background-image: url('./img/background.jpg')">
    <div class="login-form" id="login-form">
      <h2>Student Register</h2>
      <% include ./partials/messages %>
        <form action="/register" method="POST" id="form">
          <label>
            <span>Name</span>
            <input type="text" id="name" name="name" required value="<%= typeof name != 'undefined' ? name : '' %>" />
          </label>
          <label>
            <span>Email</span>
            <input type="email" id="email" name="email" required
              value="<%= typeof email != 'undefined' ? email : '' %>" />
          </label>
          <label>
            <span>Password</span>
            <input type="password" id="password" name="password" required
              value="<%= typeof password != 'undefined' ? password : '' %>" />
          </label>
          <label>
            <span>Confirm Password</span>
            <input type="password" id="password2" name="password2" required
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
          </label>
          <label class="check">
            <input type="number" id="checkbox" name="checkbox" value="1" required />
          </label>
          <!-- <label class="check">
            <span>teacher</span>

          </label> -->
          <!-- <div class="forgot-pass">
